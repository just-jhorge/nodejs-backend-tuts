<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/head.ejs') %>
  <body>
    <%- include('../includes/nav.ejs') %>

    <main class="max-w-6xl p-4 lg:p-0 mx-auto min-h-[calc(100svh-3.5rem)] py-4">
      <h1 class="text-xl font-semibold mb-5">Orders Page</h1>
      <div>
        <% if (orders.length > 0) { %>
        <ul>
          <% orders.forEach(order => { %>
          <li>
            <h1># <%= order.id %></h1>
            <ul>
              <% order.products.forEach(product => { %>
              <li><%= product.title %> (<%= product.orderItem.quantity %>)</li>
              <% }) %>
            </ul>
          </li>
          <% }) %>
        </ul>
        <% } else { %>
        <p class="text-neutral-400">No orders yet!</p>
        <% } %>
      </div>
    </main>
  </body>
</html>
