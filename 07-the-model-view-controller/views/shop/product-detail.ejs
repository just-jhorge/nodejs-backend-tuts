<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/head.ejs') %>
  <body>
    <%- include('../includes/nav.ejs') %>

    <main class="max-w-6xl p-4 lg:p-0 mx-auto min-h-[calc(100svh-3.5rem)] py-4">
      <div class="flex gap-5 items-stretch">
        <div class="w-full aspect-square bg-gray-50 rounded-md overflow-hidden">
          <img
            class="h-full w-full object-cover"
            src="<%= product.imageUrl %>"
            alt="<%= product.id %>"
          />
        </div>
        <div class="w-full">
          <p class="text-emerald-800 font-medium">$<%= product.price %></p>
          <h2 class="text-3xl font-bold mb-5"><%= product.title %></h2>
          <p class="mb-8"><%= product.description %></p>
          <%- include('../includes/add-to-cart.ejs') %>
        </div>
      </div>
    </main>
  </body>
</html>
