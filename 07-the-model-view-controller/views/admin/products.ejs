<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/head.ejs') %>
  <body>
    <%- include('../includes/nav.ejs') %>

    <main class="max-w-6xl p-4 lg:p-0 mx-auto min-h-[calc(100svh-3.5rem)] py-4">
      <h1 class="text-xl font-semibold mb-5">Admin Products List</h1>

      <% if (prods.length > 0) { %>
      <div class="grid grid-cols-3 lg:grid-cols-4 gap-3">
        <% for (let product of prods ) { %>
        <article
          class="h-[367px] w-full border border-border rounded-lg overflow-hidden"
        >
          <div class="h-3/5 w-full">
            <img
              class="h-full w-full object-cover"
              src="<%= product.imageUrl %>"
              alt="<%= product.title %>"
            />
          </div>
          <div class="p-3">
            <div class="flex items-center justify-between mb-3">
              <h1 class="text-sm font-semibold"><%= product.title %></h1>
              <h2 class="text-sm text-emerald-600 font-semibold">
                $<%= product.price %>
              </h2>
            </div>
            <p class="text-sm mb-3 text-neutral-700 line-clamp-2">
              <%= product.description %>
            </p>
            <div class="flex gap-2">
              <a
                href="/admin/edit-product"
                class="w-full text-sm border text-center border-emerald-800 text-emerald-800 rounded-md py-2"
              >
                Edit
              </a>
              <form class="w-full" action="/admin/delete-product" method="POST">
                <button
                  type="submit"
                  class="w-full text-sm bg-red-700 text-white rounded-md py-2"
                >
                  Delete
                </button>
              </form>
            </div>
          </div>
        </article>
        <% } %>
      </div>
      <% } else { %>
      <h1>No Products found</h1>
      <% } %>
    </main>
  </body>
</html>
